@{
    ViewData["Title"] = "Systems For Sale";
}

<div ng-app="PcSalesApp" ng-controller="systemListController as vm">

    <div class="text-center">
        <table ng-table="vm.systems" class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Inventory Count</th>
                </tr>
            </thead>
            <tr ng-repeat="sys in vm.systems" ng-click="vm.update(sys.systemId)">
                <td class="text-left">{{sys.systemName}}</td>
                <td class="text-left">${{sys.price}}</td>
                <td class="text-left">{{sys.inventoryCount}}</td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-route.js">  </script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.js"></script>
<script type="text/javascript" src="js/site.js"> </script>